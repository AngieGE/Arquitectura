<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_letters"
    tools:context="mx.itesm.maldi.proyecto_arquitectura.seleccion_tipo_departamento">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingTop="13dp"
        android:weightSum="1"
        tools:layout_editor_absoluteX="-9dp"
        tools:layout_editor_absoluteY="16dp">

        <ImageView
            android:id="@+id/img_departamentosTipo"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="25dp"
            app:srcCompat="@drawable/msg_departamentos_tipo"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.46"
            android:orientation="horizontal"
            android:paddingTop="25dp"
            android:weightSum="1">

            <ImageView
                android:id="@+id/img_depaTipoA"
                android:layout_width="196dp"
                android:layout_height="156dp"
                app:srcCompat="@drawable/departamento_penthouse"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="0dp" />

            <CheckBox
                android:id="@+id/cb_selTipoA"
                android:layout_width="23dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_weight="0.63"
                android:elevation="18dp"
                android:textColorLink="@color/white_letters" />

            <ImageView
                android:id="@+id/img_msgDepaTipoA"
                android:layout_width="141dp"
                android:layout_height="46dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ms_departamento_tipo_a" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="25dp"
            android:layout_weight="0.44">

            <ImageView
                android:id="@+id/img_msgDepaTipoB"
                android:layout_width="134dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="45dp"
                app:srcCompat="@drawable/msg_departamentos_tipo_b" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="CheckBox" />

            <CheckBox
                android:id="@+id/cb_selTipoB"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="45dp"
                android:elevation="0dp"
                android:textColorLink="@color/white_letters" />

            <ImageView
                android:id="@+id/img_depaTipoA"
                android:layout_width="195dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/departamento_basico" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"></LinearLayout>

        <Button
            android:id="@+id/bn_aceptar"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:background="@color/black"
            android:text="Aceptar"
            android:textColor="@color/white_letters"
            android:textSize="12sp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
